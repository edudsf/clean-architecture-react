{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": false,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "declaration": false,
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"]
}
